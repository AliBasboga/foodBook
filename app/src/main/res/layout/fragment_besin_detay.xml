<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BesinDetayFragment">


    <ImageView
        android:id="@+id/besinImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/besinIsim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/besinKarbonhidrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Besin Karbonhidrat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/besinProtein"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/besinKalori" />

    <TextView
        android:id="@+id/besinProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="26dp"
        android:text="Besin Protein"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/besinYag"
        app:layout_constraintStart_toStartOf="@+id/besinKarbonhidrat"
        app:layout_constraintTop_toBottomOf="@+id/besinKarbonhidrat" />

    <TextView
        android:id="@+id/besinIsim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="Besin İsim"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/besinKalori"
        app:layout_constraintEnd_toEndOf="@+id/besinYag"
        app:layout_constraintStart_toStartOf="@+id/besinProtein"
        app:layout_constraintTop_toBottomOf="@+id/besinImage" />

    <TextView
        android:id="@+id/besinKalori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:text="Besin kalori"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/besinKarbonhidrat"
        app:layout_constraintStart_toStartOf="@+id/besinIsim"
        app:layout_constraintTop_toBottomOf="@+id/besinIsim" />

    <TextView
        android:id="@+id/besinYag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="303dp"
        android:text="Besin Yağ"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/besinProtein"
        app:layout_constraintTop_toBottomOf="@+id/besinProtein" />

</androidx.constraintlayout.widget.ConstraintLayout>